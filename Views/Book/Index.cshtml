@model IEnumerable<Lab03.Models.Book>

@{
    ViewData["Title"] = "Books";
}

<h2>Danh sách các cuốn sách</h2>
<form action="" method="post" class="form-inline" role="form">
    <div class="form-group">
        <select name="AuthorId" class="form-control" asp-items="@ViewBag.authors">
            <option value="">Chọn tác giả</option>
        </select>
        <select name="GenreId" class="form-control" asp-items="@ViewBag.genres">
            <option value="">Chọn thể loại</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    <a asp-action="Create" class="btn btn-primary">Thêm mới</a>
</form>
<hr />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tiêu đề</th>
            <th>Tác giả</th>
            <th>Thể loại</th>
            <th>Hình ảnh</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.AuthorId</td>
                <td>@book.Genres</td>
                <td>@book.Price</td>
                <td>
                    <img src="@book.ImageUrl" alt="@book.Title" width="40" />
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-sm btn-primary">Sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

